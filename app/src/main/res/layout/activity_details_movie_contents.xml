<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_8dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_6dp"
        android:layout_marginTop="@dimen/default_10dp"
        app:cardElevation="@dimen/default_3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardCornerRadius="@dimen/default_2dp"
        card_view:cardElevation="@dimen/default_6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_16dp"
            android:paddingTop="@dimen/default_16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_16dp"
                android:layout_marginTop="@dimen/default_16dp"
                android:text="@string/description"
                android:textSize="@dimen/default_16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_16dp"
                android:layout_marginTop="@dimen/default_16dp"
                android:ellipsize="end"
                android:textSize="@dimen/default_16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_6dp"
        android:layout_marginTop="@dimen/default_10dp"
        app:cardElevation="@dimen/default_3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        card_view:cardCornerRadius="@dimen/default_2dp"
        card_view:cardElevation="@dimen/default_6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_16dp"
            android:paddingTop="@dimen/default_16dp">
            <!-- Desc -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_16dp"
                android:layout_marginTop="@dimen/default_16dp"
                android:text="@string/information"
                android:textSize="@dimen/default_16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tInf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_16dp"
                android:layout_marginTop="@dimen/default_16dp"
                android:ellipsize="end"
                android:textSize="@dimen/default_16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>